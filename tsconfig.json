    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noResolve": false,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "typescript"
    ],
    "lib": [
      "es5",
      "es6",
      "es2015.promise"
